<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jisoo.identityvalarmapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name = "android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>


    <queries>
        <package android:name="com.netease.idv.googleplay" />
    </queries>

    <application
        android:name=".alarm.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_main_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/app_main_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IdentityVAlarmApp">
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/loadingTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".alarm.AlarmBroadcast"
            android:exported="true"
            android:enabled="true"
            android:label="AlarmBroadcast">

        </receiver>

        <receiver android:name=".alarm.RestartBroadcast"
            android:exported="true"
            android:enabled="true"
            android:label="RestartBroadcast">
            <intent-filter>
                <action android:name="ACTION.RESTART.AlarmService"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name=".alarm.AlarmService"
            android:enabled="true"
            android:exported="true"/>
        <service android:name=".alarm.EmptyService"
            android:enabled="true"
            android:exported="true"/>
        <service android:name=".alarm.FCMService"
            android:stopWithTask="false"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>