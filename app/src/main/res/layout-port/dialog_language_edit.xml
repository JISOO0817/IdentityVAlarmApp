<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable
            name="viewModel"
            type="com.jisoo.identityvalarmapp.main.MainViewModel" />
        <import type="com.jisoo.identityvalarmapp.util.LanguageMode"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_0.05_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_0.35_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_0.5_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_0.65_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65"/>

        <TextView
            android:id="@+id/language_edit_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:text="@string/fragment_setting_language_change_txt"/>

        <View
            android:id="@+id/empty_view0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/language_edit_tv"
            app:layout_constraintDimensionRatio="20:1"/>

        <RadioGroup
            android:id="@+id/radioGr"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/empty_view0"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/korean_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/empty_view0"
                android:text="@string/dialog_language_korean_txt"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:id="@+id/english_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/empty_view0"
                android:text="@string/dialog_language_english_txt"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:id="@+id/japanese_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/empty_view0"
                android:text="@string/dialog_language_japanese_txt"
                android:buttonTint="@color/black"/>
        </RadioGroup>

        <View
            android:id="@+id/empty_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGr"
            app:layout_constraintDimensionRatio="20:1"/>

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/empty_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/confirm_btn"
            android:fontFamily="@font/noto_sans_cjk_kr_medium"
            android:includeFontPadding="false"
            android:textColor="@color/gray_45"
            android:text="@string/common_close"
            android:onClick="@{() -> viewModel.onLanguageEditDialogCloseBtnClicked()}"
            android:background="@drawable/dialog_left_round_bg"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"/>

        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/empty_view"
            app:layout_constraintStart_toEndOf="@+id/close_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/noto_sans_cjk_kr_medium"
            android:includeFontPadding="false"
            android:text="@string/common_confirm"
            android:onClick="@{() -> viewModel.onLanguageEditDialogConfirmBtnClicked()}"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/dialog_right_round_bg"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>