<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable
            name="viewModel"
            type="com.jisoo.identityvalarmapp.main.MainViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

        <TextView
            android:id="@+id/update_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:text="@string/dialog_need_update_title_txt"/>

        <TextView
            android:id="@+id/update_subtitle_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/update_title_tv"
            app:layout_constraintStart_toStartOf="@+id/update_title_tv"
            app:layout_constraintEnd_toEndOf="@+id/update_title_tv"
            android:fontFamily="@font/noto_sans_cjk_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/gray_45"
            android:text="@string/dialog_need_update_info_txt"/>

        <View
            android:id="@+id/margin_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_subtitle_tv"
            app:layout_constraintDimensionRatio="h,364:8"/>

        <TextView
            android:id="@+id/go_update_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_all_round_bg"
            android:fontFamily="@font/noto_sans_cjk_kr_medium"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/dialog_need_update_go_update_txt"
            android:textColor="@color/gray_45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/margin_view"
            android:onClick="@{()->viewModel.onNeedUpdateDialogConfirmBtnClicked()}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>