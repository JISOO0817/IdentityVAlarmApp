<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable
            name="viewModel"
            type="com.jisoo.identityvalarmapp.main.MainViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_0.05_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_0.95_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hor_0.03_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hor_0.47_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.47" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_0.2_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_0.8_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"/>

            <View
                android:id="@+id/first_empty_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="h,360:8"/>

            <TextView
                android:id="@+id/alarm_character_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fragment_birth_viewtwo_birth_alarm_ring_txt"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
                app:layout_constraintEnd_toStartOf="@+id/ver_0.95_guideline"
                app:layout_constraintTop_toBottomOf="@+id/first_empty_view"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alarm_character_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constrainedHeight="true"
                app:layout_constraintEnd_toStartOf="@+id/ver_0.95_guideline"
                app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
                app:layout_constraintTop_toBottomOf="@+id/alarm_character_tv" />

            <View
                android:id="@+id/empty_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alarm_character_rv"
                app:layout_constraintDimensionRatio="h,360:8"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/not_birth_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fragment_birth_viewtwo_birth_not_yet_txt"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
                app:layout_constraintEnd_toStartOf="@+id/ver_0.95_guideline"
                app:layout_constraintTop_toBottomOf="@+id/empty_view"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/not_birth_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constrainedHeight="true"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
                app:layout_constraintEnd_toStartOf="@+id/ver_0.95_guideline"
                app:layout_constraintTop_toBottomOf="@+id/not_birth_tv"/>

            <View
                android:id="@+id/empty_view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/not_birth_rv"
                app:layout_constraintDimensionRatio="h,360:8"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/already_birth_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fragment_birth_viewtwo_birth_passed_txt"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
                app:layout_constraintEnd_toStartOf="@+id/ver_0.95_guideline"
                app:layout_constraintTop_toBottomOf="@+id/empty_view2"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/already_birth_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constrainedHeight="true"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toEndOf="@+id/ver_0.05_guideline"
                app:layout_constraintEnd_toStartOf="@+id/ver_0.95_guideline"
                app:layout_constraintTop_toBottomOf="@+id/already_birth_tv"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>